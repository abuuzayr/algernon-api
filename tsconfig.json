{
    "compilerOptions": {
        "types": ["node", "jest"],
        "target": "es6",
        "allowJs": true,
        "checkJs": true,
        "module": "commonjs",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": ".",
        "paths": {
            "*": [
                "node_modules/*",
                "src/types/*"
            ]
        }
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules/**/*",
        "src/**/*.test.ts",
        "src/**/*.test.js"
    ]
}
