{
  "name": "project-retail-management-system-api",
  "version": "0.0.0",
  "main": "src",
  "private": true,
  "author": {
    "name": "Hellyna NG",
    "email": "hellyna@hellyna.com"
  },
  "license": "UNLICENSED",
  "scripts": {
    "start": "yarn run build && yarn run watch",
    "build": "yarn run build-ts && yarn run lint",
    "mongo": "mongod --dbpath .mongod",
    "serve": "nodemon dist -i *.test.js -i .mongod",
    "watch": "concurrently -k -p \"[{name}]\" -n \"MongoDB,NodeJS,TypeScript\" -c \"yellow.bold,green.bold,cyan.bold\" \"yarn run mongo\" \"yarn run serve\" \"yarn run watch-ts\"",
    "test": "jest --runInBand --forceExit",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "lint": "tslint -c tslint.json -p tsconfig.json",
    "debug": "yarn run build && yarn run watch-debug",
    "serve-debug": "nodemon --inspect dist -i *.test.js",
    "watch-debug": "concurrently -k -p \"[{name}]\" -n \"MongoDB,NodeJS,TypeScript\" -c \"yellow.bold,green.bold,cyan.bold\" \"yarn run mongo\" \"yarn run serve-debug\" \"yarn run watch-ts\""
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "js",
      "json"
    ],
    "transform": {
      "^.+\\.tsx?$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testMatch": [
      "<rootDir>/src/**/*.test.(ts|js)"
    ],
    "testEnvironment": "node",
    "setupTestFrameworkScriptFile": "<rootDir>/test/setup.ts"
  },
  "dependencies": {
    "bcrypt": "^1.0.3",
    "bluebird": "^3.5.1",
    "body-parser": "^1.18.2",
    "bodymen": "^1.0.3",
    "compression": "^1.7.1",
    "cors": "^2.8.4",
    "dotenv-safe": "^4.0.4",
    "express": "^4.16.2",
    "express-force-ssl": "^0.3.2",
    "jsonwebtoken": "^8.1.0",
    "lodash": "^4.17.4",
    "mongoose": "^4.13.1",
    "mongoose-create-unique": "^0.4.4",
    "mongoose-keywords": "^0.3.2",
    "mongoose-validator": "^1.3.2",
    "morgan": "^1.9.0",
    "passport": "^0.4.0",
    "passport-http": "^0.3.0",
    "passport-http-bearer": "^1.0.1",
    "passport-jwt": "^3.0.1",
    "querymen": "^2.1.3",
    "rand-token": "^0.4.0",
    "request": "^2.83.0",
    "request-promise": "^4.2.2",
    "sendgrid": "^5.2.3"
  },
  "devDependencies": {
    "@types/bcrypt": "^1.0.0",
    "@types/bluebird": "^3.5.18",
    "@types/body-parser": "^1.16.7",
    "@types/compression": "^0.0.34",
    "@types/cors": "^2.8.1",
    "@types/dotenv-safe": "^4.0.1",
    "@types/express": "^4.0.39",
    "@types/is": "^0.0.17",
    "@types/jest": "^21.1.5",
    "@types/jsonwebtoken": "^7.2.3",
    "@types/lodash": "^4.14.82",
    "@types/mongoose": "^4.7.25",
    "@types/morgan": "^1.7.35",
    "@types/nock": "^8.2.1",
    "@types/node": "^8.0.50",
    "@types/passport": "^0.3.5",
    "@types/passport-http": "^0.3.3",
    "@types/passport-http-bearer": "^1.0.31",
    "@types/passport-jwt": "^3.0.0",
    "@types/request": "^2.0.7",
    "@types/request-promise": "^4.1.39",
    "@types/sinon": "^2.3.7",
    "@types/supertest": "^2.0.3",
    "@types/validator": "^6.3.0",
    "concurrently": "^3.5.0",
    "jest": "^21.1.0",
    "mockgoose": "^7.3.3",
    "nock": "^9.1.0",
    "nodemon": "^1.12.1",
    "shelljs": "^0.7.8",
    "sinon": "^4.1.2",
    "supertest": "Hellyna/supertest.git#3.0.0-domain-support",
    "ts-jest": "^21.2.2",
    "tslint": "^5.8.0",
    "typescript": "^2.6.1"
  }
}
